    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.c", // Build tất cả file .c trong thư mục hiện tại
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
